<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>za.ac.tut.bl.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetBookByTitle</servlet-name>
        <servlet-class>za.ac.tut.bl.GetBookByTitle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewAllBooks</servlet-name>
        <servlet-class>za.ac.tut.bl.viewAllBooks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookKeeperMenu</servlet-name>
        <servlet-class>za.ac.tut.bl.bookKeeperMenu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBook</servlet-name>
        <servlet-class>za.ac.tut.bl.AddBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveBookByTitle</servlet-name>
        <servlet-class>za.ac.tut.bl.RemoveBookByTitle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>downloadBook</servlet-name>
        <servlet-class>za.ac.tut.bl.downloadBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>za.ac.tut.bl.SignUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetBookByTitle</servlet-name>
        <url-pattern>/GetBookByTitle.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewAllBooks</servlet-name>
        <url-pattern>/viewAllBooks.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookKeeperMenu</servlet-name>
        <url-pattern>/bookKeeperMenu.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBook</servlet-name>
        <url-pattern>/AddBook.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveBookByTitle</servlet-name>
        <url-pattern>/RemoveBookByTitle.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>downloadBook</servlet-name>
        <url-pattern>/downloadBook.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/SignUp.do</url-pattern>
    </servlet-mapping>
    <!-- Security configuration -->
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>LibraryWeb</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-constraint>
        <display-name>bookeeper</display-name>
        <web-resource-collection>
            <web-resource-name>Protected Resources</web-resource-name>
            <url-pattern>/bookKeeperMenu.do</url-pattern>
            <!-- Add any other protected URLs -->
        </web-resource-collection>
        <auth-constraint>
            <description>Avails the affected resource onlyto the bookeeper</description>
            <role-name>bookeeper</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>bookeeper</role-name>
    </security-role>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
